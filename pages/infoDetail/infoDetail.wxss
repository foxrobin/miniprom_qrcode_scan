/* pages/infoDetail/infoDetail.wxss */

.colset {
  justify-content: center;
  align-items: center;
  text-align: center;
  width: 100%;
}

.coltitle {
  background-color: #a8c951;
  border-right: 1px solid;
}

.detailrow {
  border-top: 0.5px solid #afafae;
  border-bottom: 0.2px solid #afafae;
  line-height: 50rpx;
  color: #76a00b;
  font-size: small;
}

.arrow {
  height: 130rpx;
  max-width: 130rpx;
}

.mapRow {
  width: 100%;
  height: 600rpx;
  padding: 50rpx 0;
}

.routeIcon {
  background: grey;
  clip-path: polygon(66% 0, 80% 0, 80% 25%, 100% 39%, 80% 49%, 80% 100%, 66% 100%);
}

.routeRow {
  height: 130rpx;
}

.routeRowIcon {
  display: flex;
}
