/* pages/brand/brand.wxss */


.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  transition: 0.3s;
  border-radius: 5px; /* 5px rounded corners */
  margin: 40rpx;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
}

/* Add some padding inside the card container */

.viewLogo {
  padding: 0;
  justify-content: center;
  display: flex;
}

.viewBackground {
  display: flex;
  justify-content: space-between;
  width: 100%;
  z-index: -1;
}

.image-tmlogo {
  justify-content: center;
  align-items: center;
  align-self: center;
  margin: 111rpx 0rpx 0rpx 0rpx;
  width: 139.8pt;
  height: 30pt;
}

.image-topleft {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  z-index: -1;
  height: 105rpx;
  width: 413rpx;
}

.image-topright{
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  z-index: -1;
  height: 222rpx;
  width: 192rpx;
}

.image-bottomright {
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  z-index: -1;
  height: 222rpx;
  width: 192rpx;
}